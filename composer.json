{
    "name": "mozafar/encbuddy",
    "description": "Package to encrypt response and decrypt request body",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Mozafar Gholami",
            "email": "mozafar.gholami@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.0",
        "illuminate/support": "^6.0 || ^7.0 || ^8.0 || ^9.0 || ^10.0",
        "illuminate/encryption": "^6.0 || ^7.0 || ^8.0 || ^9.0 || ^10.0",
        "illuminate/http": "^6.0 || ^7.0 || ^8.0 || ^9.0 || ^10.0",
        "illuminate/config": "^6.0 || ^7.0 || ^8.0 || ^9.0 || ^10.0"
    },
    "autoload": {
        "psr-4": {
            "Mozafar\\EncBuddy\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mozafar\\EncBuddy\\EncBuddyServiceProvider"
            ]
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "*"
    }
